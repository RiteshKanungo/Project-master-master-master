<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="130sp">

        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:src="@drawable/imagebottom" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="45sp"
            android:layout_toEndOf="@+id/linear_1"
            android:layout_toRightOf="@+id/linear_1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP To 28% Off"
                android:textColor="@color/colorbackground"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_discount"
                android:layout_marginTop="5sp"
                android:text="Grocery Staplss"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="5sp"
                android:paddingRight="12sp"
                android:text="Grocery Staplss"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/shopping_cart"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5sp"
        android:layout_below="@+id/rel"
        android:background="@color/colorlayoutbackgroud" />
</RelativeLayout>