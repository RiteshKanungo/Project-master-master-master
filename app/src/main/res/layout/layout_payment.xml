<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative_new"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorbackground"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp"
            android:layout_toRightOf="@+id/img_back"
            android:gravity="center_vertical"
            android:text="Payment"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/relative_new"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />

    <RelativeLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/view"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5sp">

        <TextView
            android:id="@+id/txt_off"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Amount Payable"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taxes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/txt_off"
            android:gravity="center_vertical"
            android:text="(incl. of all taxes)"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/taxes"
            android:gravity="center_vertical|center"
            android:text="Rs 1245"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/amount"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/layout_cod"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_below="@+id/view_2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_cod"
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:padding="20dp" />


        <TextView
            android:id="@+id/txt_cod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_cod"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20sp"
            android:text="Cash On Delivery"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="20sp"
            android:layout_toRightOf="@+id/txt_cod"
            android:gravity="center">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:src="@drawable/slider_rightt" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/layout_cod"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/layout_paytm"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_below="@+id/view_3"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_paytm"
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:padding="20dp" />


        <TextView
            android:id="@+id/txt_paytm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_paytm"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20sp"
            android:text="Paytm"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="20sp"
            android:layout_toRightOf="@+id/txt_paytm"
            android:gravity="center">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:src="@drawable/slider_rightt" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_5"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/layout_paytm"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/layout_mobi"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_below="@+id/view_4"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_mobi"
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:padding="20dp" />


        <TextView
            android:id="@+id/txt_mobi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_mobi"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20sp"
            android:text="MobiKwik"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="20sp"
            android:layout_toRightOf="@+id/txt_mobi"
            android:gravity="center">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:src="@drawable/slider_rightt" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_6"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/layout_mobi"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />


    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/layout_paytm"
        android:layout_marginTop="2sp"
        android:background="@color/colorBlack" />


</RelativeLayout>
