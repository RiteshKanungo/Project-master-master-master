<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/replace_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_all"
            android:layout_height="match_parent"
            android:layout_marginBottom="55sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="70dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15sp"
                        android:gravity="center"
                        android:layout_marginLeft="5sp"
                        android:layout_margin="5dp"
                        android:background="@drawable/search"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutlinear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5sp"
                            android:background="#ffffff"
                            android:gravity="center_vertical"
                            android:hint="Search"
                            android:singleLine="true"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frament_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15sp"
                        android:background="@drawable/imagetop"
                        app:cardCornerRadius="5sp"
                        app:cardElevation="5sp">

                        <ImageView
                            android:id="@+id/image_top"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/layout_backgroud"
                            android:scaleType="fitXY"
                            android:src="@drawable/imagetop"></ImageView>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_selling_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Selling Item"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal" />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:background="@drawable/imagebottom"
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="5sp"
                        app:cardElevation="5sp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/layout_grid"
                            android:layout_height="match_parent">

                        <GridView
                            android:id="@+id/simpleGridView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numColumns="3"
                            android:padding="1dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Savers Today"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="2sp"
                        android:background="@drawable/imagebottom"
                        android:backgroundTint="@color/colorCircle"
                        app:cardCornerRadius="5sp"
                        app:cardElevation="5sp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/layout_backgroud"
                            android:scaleType="fitXY"
                            android:src="@drawable/imagebottom"></ImageView>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="3sp"
            android:background="@color/colorCircle"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/shopping_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/home"
                        android:text="Home"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/category" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/about"
                        android:text="Categories"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/portfolio"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:src="@drawable/search" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/portfolio"
                        android:text="Search"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ofers"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:src="@drawable/discount" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ofers"
                        android:text="Offers"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/contactus"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:src="@drawable/shopping_basket" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contactus"
                        android:text="Basket"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
